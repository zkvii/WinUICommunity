<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="WinUICommunityGallery.Pages.GravatarPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:WinUICommunityGallery.Examples"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:wuc="using:WinUICommunity"
      mc:Ignorable="d">
    <ScrollViewer>
        <StackPanel Margin="10"
                    wuc:PanelAttach.ChildrenTransitions="Default"
                    Spacing="10">
            <local:ControlExample DocPage="controls/gravatar">
                <local:ControlExample.Xaml>
                    <x:String>
                        &lt;wuc:Gravatar Id="WinUICommunity" /&gt;
                    </x:String>
                </local:ControlExample.Xaml>
                <StackPanel Margin="10"
                            Spacing="10">
                    <wuc:Gravatar Id="{x:Bind txt.Text, Mode=OneWay}" />
                    <TextBox x:Name="txt"
                             PlaceholderText="Id" />
                </StackPanel>
            </local:ControlExample>
        </StackPanel>
    </ScrollViewer>
</Page>
