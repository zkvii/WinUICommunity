<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="WinUICommunityGallery.Pages.SelectorBarSegmentedPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:WinUICommunityGallery.Examples"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:wuc="using:WinUICommunity"
      mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Margin="10"
                    wuc:PanelAttach.ChildrenTransitions="Default"
                    Spacing="10">
            <local:ControlExample HeaderText="SelectorBarSegmented">
                <wuc:SelectorBarSegmented>
                    <SelectorBarItem Icon="Find" IsSelected="True"
                                     Text="Item 1" />
                    <SelectorBarItem Icon="Home"
                                     Text="Item 2" />
                    <SelectorBarItem Icon="Home"
                                     Text="Item 3" />
                </wuc:SelectorBarSegmented>
            </local:ControlExample>
        </StackPanel>
    </ScrollViewer>

</Page>
